@model ChesterDevs.Core.Aspnet.Models.ViewModels.SubscribeViewModel
@{
    ViewData["Title"] = "IT Jobs - Subscribe";
    var sidbarImage = Url.Content("~/images/Groves.png");
}
<header class="hero-image" role="banner" style="background-image: url(@sidbarImage);">

    <partial name="_HamburgerButton" />
    <partial name="_Nav" />
</header>

<main class="container">
    <div class="row">
        <div class="col-12 col-lg-8 single-content-sidebar">
            <div class="back-link">
                <a asp-action="Index"><i class="fa fa-chevron-left"></i> Back to jobs </a>
            </div>

            <h1>Subscribe to Job Alerts</h1>

            @if (Model.Confirmation)
            {

                <p><em>Thank you, you will receive a confirmation email.</em></p>
            }
            else
            {
                <p>Enter your email for to subscribe to new job alerts as they are posted</p>
                <form asp-action="Subscribe">

                    <div class="form-group">
                        <label asp-for="EmailAddress">Email</label>
                        <input type="email" asp-for="EmailAddress" placeholder="example@email.com" class="form-control">
                    </div>

                    <div class="form-group">
                        <input class="btn btn-default" type="submit" value="Subscribe">
                    </div>
                </form>
            }


            <hr />

            <p>Your email address will only be used for sending Job Alerts. For more details see the <a asp-controller="Home" asp-action="Pages" asp-route-view="Privacy">privacy policy</a></p>

        </div><!-- main-content/col -->
        <div class="col-12 col-lg-3 ml-auto single-content-sidebar-area">
            
        </div>
    </div> <!--/row -->

</main> <!-- /container -->



