<!DOCTYPE html>
<html class="no-js">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title>@ViewData["Title"] - Chester Devs</title>

    <meta name="viewport" content="width=device-width">
    
    <environment include="Development">
        <link rel="stylesheet" href="~/theme/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/theme/css/font-awesome.min.css">
        <link rel="stylesheet" href="~/theme/css/main.css">
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/theme/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/theme/css/font-awesome.min.css">
        <link rel="stylesheet" href="~/theme/css/main.css" asp-append-version="true">
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </environment>
    
    
    <!--[if lt IE 9]>
        <script src="/js/vendor/html5shiv.min.js"></script>
    <![endif]-->

    <script src="~/theme/js/vendor/modernizr.custom.32229-2.8-respondjs-1-4-2.js"></script>

</head>
<body>

    <!-- if the user has javascript disabled they can still use the menu -->
    <noscript>
        <div class="no-js-menu">
            <ul>
                <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
                <li><i class="fa fa-user"></i><a href="author.html">John Smith</a></li>
                <li><i class="fa fa-anchor"></i><a href="page.html">About</a></li>
                <li><i class="fa fa-star"></i><a href="favorites.html">Favorites</a></li>
                <li><i class="fa fa-paper-plane"></i><a href="contact.html">Contact</a></li>
                <li><i class="fa fa-file"></i><a href="post.html">Post Page</a></li>
                <li><i class="fa fa-file"></i><a href="post-sidebar.html">Post with Sidebar</a></li>
                <li><i class="fa fa-home"></i><a href="alt-home.html">Alternate Home</a></li>
                <li><i class="fa fa-image"></i><a href="category.html">Category Page</a></li>
            </ul>
        </div>
    </noscript>
    <!-- end no script -->

    @RenderBody()
    

    <environment include="Development">
        <script src="~/theme/js/vendor/jquery-1.11.2.min.js"></script>
        <script src="~/theme/js/vendor/jquery.jpanelmenu.min.js"></script>
        <script src="~/theme/js/vendor/popper.min.js"></script>
        <script src="~/theme/js/vendor/bootstrap.min.js"></script>
        <script src="~/theme/js/vendor/fastclick.min.js"></script>

        <script src="~/theme/js/main.js"></script>
        <script src="~/js/site.js"></script>

    </environment>
    <environment exclude="Development">

        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-1.11.2.min.js"
                asp-fallback-src="~/theme/js/vendor/jquery-1.11.2.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-Pn+PczAsODRZ2PiGg0IheRROpP7lXO1NTIjiPo6cca8TliBvaeil42fobhzvZd74">
        </script>
        <script src="~/theme/js/vendor/jquery.jpanelmenu.min.js"></script>
        <script src="~/theme/js/vendor/popper.min.js"></script>
        <script src="~/theme/js/vendor/bootstrap.min.js"></script>
        <script src="~/theme/js/vendor/fastclick.min.js"></script>

        <script src="~/theme/js/main.min.js" asp-append-version="true"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>

    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
