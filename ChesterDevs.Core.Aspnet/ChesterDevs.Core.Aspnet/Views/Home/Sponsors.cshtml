@{
    ViewData["Title"] = "Home Page";
    var sidbarImage = Url.Content("~/theme/img/default-sidebar.jpg");
}

<main class="container left-container">
    <div class="row">

        <partial name="_Nav" />

        <section class="sidebar col-lg-5 col-12" style="background-image: url(@sidbarImage)">

            <partial name="_HamburgerButton" />

            <div class="site-info">
                <div class="primary-info">
                    <h1>Sponsors</h1>
                    <p>To cover costs we rely on financial support from businesses. <a asp-controller="Home" asp-action="Pages" asp-route-view="SponorshipDetail">How to become a sponsor </a></p>

                    <p>Content is king</p>
                </div>
                <div class="secondary-info">
                    <partial name="_SidebarSocials"/>
                </div>
            </div>
        </section><!-- end sidebar -->

        <section class="col-lg-7 col-12 ml-auto main-content">


            <div class="author-bio">

                <img src="@Url.Content("~/images/Shortlist-Logo.jpg")">

                <div class="author-bio__info">
                    <h1><a href="http://www.ontheshortlist.co.uk" target="_blank">Shortlist Recruitment</a></h1>
                    <p>ShortList Recruitment is a Chester based agency, specialising in placing developers of all levels right across the North West.    The .NET and PHP market is incredibly buoyant right now, and we understand the pressures and obstacles that face developers when trying to secure their next role.</p>
                    <p><a href="http://www.ontheshortlist.co.uk" target="_blank">www.ontheshortlist.co.uk</a></p>
                </div>
            </div>


            <h2 class="favorites">Other sponsors</h2>

            <div class="posts-block animated fadeIn ">

                <article class="post author-page">
                    <div class="post-preview col-10 col-sm-9  no-gutter">
                        <h2><a href="http://foremansllp.com" target="_blank">Foremans LLP Accountants</a></h2>

                        <p>Specialist Accountants providing accounting and tax advice to Freelancers</p>
                        
                    </div>
                    <div class=" col-3  no-gutter">
                        <img src="@Url.Content("~/images/Foremans_V2_Tidy_logo.png")" class="sponsor-icon" alt="Foremans LLP Accountants Logo">
                    </div>
                </article>

                <article class="post author-page">
                    <div class="post-preview col-10 col-sm-9  no-gutter">
                        <h2><a href="http://www.wmreply.com" target="_blank">WM Reply</a></h2>

                        <p>
                            WM Reply is a consultancy specialising in
                            Microsoft SharePoint and Office 365
                        </p>

                    </div>
                    <div class=" col-3  no-gutter">
                        <img src="@Url.Content("~/images/WMReply.PNG")" class="sponsor-icon" alt="WM Reply Logo">
                    </div>
                </article>

                <article class="post author-page">
                    <div class="post-preview col-10 col-sm-9  no-gutter">
                        <h2><a href="https://www.orbitalgo.com" target="_blank">Orbital Software Solutions</a></h2>

                        <p>
                            A team of IT professionals delivering the very
                            best in systems, consultancy & support.
                        </p>

                    </div>
                    <div class=" col-3  no-gutter">
                        <img src="@Url.Content("~/images/OrbitalWithSurroundCD.png")" class="sponsor-icon" alt="Orbital Software Solutions Logo" >
                    </div>
                </article>

                <div class="view-all-by-author">
                    <a asp-controller="Home" asp-action="Pages" asp-route-view="SponorshipDetail">How to become a sponsor <i class="fa fa-chevron-right"></i></a>
                </div>

                <partial name="_Footer" />

            </div> <!--/posts-block -->
        </section><!-- main content -->
    </div> <!--/row -->

</main> <!-- /container -->

